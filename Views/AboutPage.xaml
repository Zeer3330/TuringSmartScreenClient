<UserControl x:Class="TuringSmartScreenClient.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">
    <Grid Background="White">
         <TextBlock Text="关于我们" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,100,0,20"/>
         <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="{Binding Title}" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Version}" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Description}" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Text="Copyright ©  2025" FontSize="18" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Copyright}" FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>